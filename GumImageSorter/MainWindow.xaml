<Window x:Class="GumImageSorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GumImageSorter"
        mc:Ignorable="d"
        Title="GumImageSorter v0.1" Width="1200" Height="650" MinWidth="640" MinHeight="240">
    <Window.Resources>
        <local:Sorter x:Key="KeySorter"/>
    </Window.Resources>
    <Window.DataContext>
        <StaticResource ResourceKey="KeySorter"/>
    </Window.DataContext>


    <Grid Margin="1,0,1,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ProgressBar Value="{Binding ProgressCurrent}" Maximum="{Binding ProgressMaximum}"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" MinWidth="240"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="400" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ======================================== Left ======================================== -->
            <Grid Grid.Column="0">
                <TabControl>
                    <!-- ======================================== Files ======================================== -->
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="./Fonts/#Segoe Fluent Icons" Text="&#xE8B7;" FontSize="18"/>
                                <TextBlock Text="Files" VerticalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <ProgressBar IsIndeterminate="{Binding Working}"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Load" VerticalAlignment="Center" Width="110"/>
                                <Button Grid.Column="1" HorizontalAlignment="Stretch" Content="File" Command="{Binding ImageListOpenFileButton}"/>
                                <Button Grid.Column="3" HorizontalAlignment="Stretch" Content="Directory" Command="{Binding ImageListOpenDirectoryButton}"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="List Remove" VerticalAlignment="Center" Width="110"/>
                                <Button Grid.Column="1" HorizontalAlignment="Stretch" Content="Select" Command="{Binding ImageListRemoveSelectedButton}"/>
                                <Button Grid.Column="3" HorizontalAlignment="Stretch" Content="All" Command="{Binding ImageListRemoveAllButton}"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Go to DeleteList" VerticalAlignment="Center" Width="110"/>
                                <Button Grid.Column="1" HorizontalAlignment="Stretch" Content="Select" Command="{Binding ImageListDeleteSelectedButton}"/>
                                <Button Grid.Column="3" HorizontalAlignment="Stretch" Content="All" Command="{Binding ImageListDeleteAllButton}"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="File Move" VerticalAlignment="Center" Width="110"/>
                                <Button Grid.Column="1" HorizontalAlignment="Stretch" Content="Select" Command="{Binding ImageListMoveSelectedButton}"/>
                                <Button Grid.Column="3" HorizontalAlignment="Stretch" Content="All" Command="{Binding ImageListMoveAllButton}"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock HorizontalAlignment="Center"><Hyperlink NavigateUri="https://gumpcb.tistory.com" Click="HyperLink_Click" Cursor="Hand">GumPCB.tistory.com</Hyperlink>
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </TabItem>

                    <!-- ======================================== Rename ======================================== -->
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="./Fonts/#Segoe Fluent Icons" Text="&#xE792;" FontSize="18"/>
                                <TextBlock Text="Rename" VerticalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <ProgressBar IsIndeterminate="{Binding Working}"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Apply Rename" VerticalAlignment="Center" Width="100" Foreground="OrangeRed"/>
                                <Button Grid.Column="1" HorizontalAlignment="Stretch" Content="Select" Command="{Binding ApplyRenameSelectedButton}" Foreground="OrangeRed"/>
                                <Button Grid.Column="3" HorizontalAlignment="Stretch" Content="All" Command="{Binding ApplyRenameAllButton}" Foreground="OrangeRed"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="2">
                                <Border BorderBrush="Gray" BorderThickness="1"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Directory name as File name" VerticalAlignment="Center"/>
                            </Grid>
                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" HorizontalAlignment="Stretch" Content="Select" Command="{Binding ToDirectoryNameSelectedButton}"/>
                                <Button Grid.Column="2" HorizontalAlignment="Stretch" Content="All" Command="{Binding ToDirectoryNameAllButton}"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="5">
                                <Border BorderBrush="Gray" BorderThickness="1"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding ReplaceName.Before}" PreviewTextInput="FileNameTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                <TextBlock Grid.Column="1" Text="->" Margin="2,0,2,0" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding ReplaceName.After}" PreviewTextInput="FileNameTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" HorizontalAlignment="Stretch" Content="Delete" Command="{Binding ReplaceListDeleteButton}"/>
                                <Button Grid.Column="2" Margin="2,0,0,0" HorizontalAlignment="Stretch" Content="Replace" Command="{Binding ReplaceNameButton}"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="8">
                                <ListView HorizontalAlignment="Stretch" SelectionMode="Single" ItemsSource="{Binding ReplaceList}" SelectionChanged="ReplaceList_SelectionChanged" >
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Before}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Text="->" Margin="2,0,2,0" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" Text="{Binding After}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>

                        </Grid>
                    </TabItem>

                    <!-- ======================================== Delete ======================================== -->
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="./Fonts/#Segoe Fluent Icons" Text="&#xE74D;" FontSize="18"/>
                                <TextBlock Text="Delete" VerticalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <ProgressBar IsIndeterminate="{Binding Working}"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="File Delete" VerticalAlignment="Center" Width="90" Foreground="OrangeRed"/>
                                <Button Grid.Column="1" HorizontalAlignment="Stretch" Content="Select" Command="{Binding DeleteListDeleteSelectedButton}" Foreground="OrangeRed"/>
                                <Button Grid.Column="3" HorizontalAlignment="Stretch" Content="All" Command="{Binding DeleteListDeleteAllButton}" Foreground="OrangeRed"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="2">
                                <Border BorderBrush="Gray" BorderThickness="1"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="List Remove" VerticalAlignment="Center" Width="90"/>
                                <Button Grid.Column="1" HorizontalAlignment="Stretch" Content="Select" Command="{Binding DeleteListRemoveSelectedButton}"/>
                                <Button Grid.Column="3" HorizontalAlignment="Stretch" Content="All" Command="{Binding DeleteListRemoveAllButton}"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="File Move" VerticalAlignment="Center" Width="90"/>
                                <Button Grid.Column="1" HorizontalAlignment="Stretch" Content="Select" Command="{Binding DeleteListMoveSelectedButton}"/>
                                <Button Grid.Column="3" HorizontalAlignment="Stretch" Content="All" Command="{Binding DeleteListMoveAllButton}"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="5">
                                <ProgressBar Value="{Binding CurrentWorkedDeleteList}" Maximum="{Binding DeleteList.Count}"/>
                            </Grid>
                            <Grid Margin="0,2,0,0" Grid.Row="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <ListView HorizontalAlignment="Stretch" SelectionMode="Extended" ItemsSource="{Binding DeleteList}" SelectionChanged="ImageList_SelectionChanged" PreviewDragOver="FilesOrDirectorys_DragOver" PreviewDrop="ImageList_Drop" AllowDrop="True" PreviewKeyDown="ImageList_PreviewKeyDown" >
                                    <ListView.Resources>
                                        <Style TargetType="{x:Type ListViewItem}">
                                            <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                                        </Style>
                                    </ListView.Resources>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding SaveName}" VerticalAlignment="Center"/>
                                                <StackPanel Orientation="Horizontal" >
                                                    <TextBlock Text="{Binding Format}" VerticalAlignment="Center"/>
                                                    <TextBlock Text=" | " VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Width}" VerticalAlignment="Center"/>
                                                    <TextBlock Text="x" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Height}" VerticalAlignment="Center"/>
                                                    <TextBlock Text=" | " VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding FileSizeString}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </Grid>
                    </TabItem>

                </TabControl>
            </Grid>

            <GridSplitter Margin="1,0,1,0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" ShowsPreview="True" Width="3" Background="DarkSlateBlue"/>

            <!-- ======================================== Center ======================================== -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="./Fonts/#Segoe Fluent Icons" Text="&#xE74D;" FontSize="18"/>
                        <TextBlock Grid.Column="1" Text="{Binding DeleteList.Count}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <Border Grid.Column="2" Height="18" BorderBrush="Gray" BorderThickness="1"/>
                        <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="./Fonts/#Segoe Fluent Icons" Text="&#xE786;" FontSize="18"/>
                        <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding SelectedImageIndexCount}" VerticalAlignment="Center"/>
                            <TextBlock Text=" / " VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ImageList.Count}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1"/>
                        </Grid>
                    </Grid>
                </Grid>

                <ListView Grid.Row="1" HorizontalAlignment="Stretch" SelectionMode="Extended" ItemsSource="{Binding ImageList}" SelectedIndex="{Binding SelectedImageIndex}" SelectionChanged="ImageList_SelectionChanged" PreviewDragOver="FilesOrDirectorys_DragOver" PreviewDrop="ImageList_Drop" AllowDrop="True" PreviewKeyDown="ImageList_PreviewKeyDown" >
                    <ListView.Resources>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding FileName}" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="-> " VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding SaveName}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="{Binding Format}" VerticalAlignment="Center"/>
                                    <TextBlock Text=" | " VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Width}" VerticalAlignment="Center"/>
                                    <TextBlock Text="x" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Height}" VerticalAlignment="Center"/>
                                    <TextBlock Text=" | " VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding FileSizeString}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>

            <GridSplitter Margin="1,0,1,0" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" ShowsPreview="True" Width="3" Background="DarkSlateBlue"/>

            <!-- ======================================== Right ======================================== -->
            <Grid Grid.Column="4" PreviewDragOver="FilesOrDirectorys_DragOver" PreviewDrop="ImageList_Drop" AllowDrop="True" PreviewKeyDown="ImageList_PreviewKeyDown">
                <Grid>
                    <Image Stretch="Fill" Source="{Binding TransparencyImage}"/>
                    <Image Stretch="Uniform" Source="{Binding ThumbnailImage}"/>
                </Grid>
            </Grid>

        </Grid>
    </Grid>

</Window>