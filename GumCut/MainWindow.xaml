<Window x:Class="GumCut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GumCut"
        mc:Ignorable="d"
        Title="GumCut v1.2" Width="1200" Height="700" MinWidth="850" MinHeight="600" FontSize="16">
    <Window.Resources>
        <local:Cut x:Key="KeyCut"/>
    </Window.Resources>
    <Window.DataContext>
        <StaticResource ResourceKey="KeyCut"/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" MinWidth="360"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel VerticalAlignment="Top" Margin="2,0,2,0">

                <Grid Margin="0,2,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="FFmpeg File" VerticalAlignment="Center" Width="100"/>
                    <TextBox TextWrapping="NoWrap" IsReadOnly="True" Grid.Column="1" Text="{Binding Data.FFmpegFile}" FontSize="12"/>
                    <Button Content="&#xE8E5;" Margin="2,0,0,0" Grid.Column="2" Command="{Binding FFmpegOpenButton}" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18"/>
                </Grid>


                <Grid Margin="0,2,0,0">
                    <StackPanel>
                        <!-- ======================================== FastCut ======================================== -->
                        <TabControl Margin="0,4,0,0">
                            <TabItem IsSelected="{Binding FastCutTabControl}">
                                <TabItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="./Fonts/#Segoe Fluent Icons" Text="&#xEB9D;" Margin="0,3,0,0" FontSize="18"/>
                                        <TextBlock Text="Cut" Margin="2,0,0,0" />
                                    </StackPanel>
                                </TabItem.Header>
                                <StackPanel>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Faststart" VerticalAlignment="Center" Width="100"/>
                                        <CheckBox Grid.Column="1" Content="&#xE704;" VerticalAlignment="Center" IsChecked="{Binding Data.Streaming}" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18"/>
                                    </Grid>
                                </StackPanel>
                            </TabItem>

                            <!-- ======================================== Edit ======================================== -->
                            <TabItem IsSelected="{Binding EditTabControl}">
                                <TabItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="./Fonts/#Segoe Fluent Icons" Text="&#xF7EE;" Margin="0,3,0,0" FontSize="18"/>
                                        <TextBlock Text="Edit" Margin="2,0,0,0" />
                                    </StackPanel>
                                </TabItem.Header>
                                <StackPanel>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Encoder" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Text="Video " VerticalAlignment="Center"/>
                                        <ComboBox Grid.Column="2" ItemsSource="{Binding Data.VideoEncoders}" SelectedIndex="{Binding Data.SelectedVideoEncoder}" />
                                        <TextBlock Grid.Column="3" Text=" Audio " VerticalAlignment="Center"/>
                                        <ComboBox Grid.Column="4" ItemsSource="{Binding Data.AudioEncoders}" SelectedIndex="{Binding Data.SelectedAudioEncoder}" />
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition Height="2"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="Preset " VerticalAlignment="Center" Width="100" TextAlignment="Right"/>
                                        <ComboBox Grid.Column="1" ItemsSource="{Binding Data.Presets}" SelectedIndex="{Binding Data.SelectedPreset}" />
                                        <TextBlock Grid.Column="2" Text=" Tune " VerticalAlignment="Center"/>
                                        <ComboBox Grid.Column="3" ItemsSource="{Binding Data.Tunes}" SelectedIndex="{Binding Data.SelectedTune}" />

                                        <TextBlock Text="Profile " Grid.Row="2" VerticalAlignment="Center" Width="100" TextAlignment="Right"/>
                                        <ComboBox Grid.Column="1" Grid.Row="2" ItemsSource="{Binding Data.Profiles}" SelectedIndex="{Binding Data.SelectedProfile}" />
                                        <TextBlock Grid.Column="2" Grid.Row="2" Text=" Level " VerticalAlignment="Center"/>
                                        <ComboBox Grid.Column="3" Grid.Row="2" ItemsSource="{Binding Data.Levels}" SelectedIndex="{Binding Data.SelectedLevel}" />
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Bitrate" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Text="&#xF61F;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Bitrate}" Margin="2,0,0,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <TextBlock Grid.Column="3" Text="M, max" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="4" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.BitrateMax}" Margin="2,0,0,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <TextBlock Grid.Column="5" Text="M, buffer" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="6" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Bufsize}" Margin="2,0,0,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <TextBlock Grid.Column="7" Text="M" VerticalAlignment="Center"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Quality" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Text="CRF" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.CRF}" Margin="2,0,0,0" PreviewTextInput="DoubleTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <Button Grid.Column="3" Content="&#xE75C;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" Command="{Binding EraseCRFButton}" Margin="2,0,0,0"/>
                                        <TextBlock Grid.Column="4" Text=" QP" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="5" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.QP}" Margin="2,0,0,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <Button Grid.Column="6" Content="&#xE75C;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" Command="{Binding EraseQPButton}" Margin="2,0,0,0"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Qscale " VerticalAlignment="Center" Width="100" TextAlignment="Right"/>
                                        <TextBlock Grid.Column="1" Text="Video " VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Qscale}" Margin="2,0,0,0" PreviewTextInput="DoubleTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <TextBlock Grid.Column="3" Text=" Audio " VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="4" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.QscaleAudio}" Margin="2,0,0,0" PreviewTextInput="DoubleTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition Height="2"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="2"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="2"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Column="0" Text="Resize" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Text="&#xE8AB;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Scale.Width}" Margin="2,0,2,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <TextBlock Grid.Column="3" Text="&#xE8CB;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="4" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Scale.Height}" Margin="2,0,0,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>

                                        <TextBlock Grid.Column="0" Grid.Row="2" Text="Crop Start" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Grid.Row="2" Text="&#xEA5B;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" Grid.Row="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.CropStart.Width}" Margin="2,0,2,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <TextBlock Grid.Column="3" Grid.Row="2" Text="&#xEA5B;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                            <TextBlock.RenderTransform><TransformGroup><ScaleTransform/><SkewTransform/><RotateTransform Angle="90"/><TranslateTransform/></TransformGroup></TextBlock.RenderTransform></TextBlock>
                                        <TextBox Grid.Column="4" Grid.Row="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.CropStart.Height}" Margin="2,0,0,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>

                                        <TextBlock Grid.Column="0" Grid.Row="4" Text="Crop Size" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Grid.Row="4" Text="&#xE8AB;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" Grid.Row="4" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.CropSize.Width}" Margin="2,0,2,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <TextBlock Grid.Column="3" Grid.Row="4" Text="&#xE8CB;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="4" Grid.Row="4" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.CropSize.Height}" Margin="2,0,0,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="FPS" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Text="&#xE8B9;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Fps}" Margin="2,0,0,0" PreviewTextInput="DoubleTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Rotation" VerticalAlignment="Center" Width="100"/>
                                        <Slider Minimum="0" Maximum="270" TickFrequency="90" IsSnapToTickEnabled="True" TickPlacement="Both"  Grid.Column="1" Value="{Binding Data.Rotation}"/>
                                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="30" Grid.Column="2" Text="{Binding Data.Rotation}"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Flip" VerticalAlignment="Center" Width="100"/>
                                        <CheckBox Grid.Column="1" Content="&#xE8AB;" VerticalAlignment="Center" IsChecked="{Binding Data.HFlip}" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18"/>
                                        <CheckBox Grid.Column="2" Content="&#xE8CB;" VerticalAlignment="Center" IsChecked="{Binding Data.VFlip}" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Faststart" VerticalAlignment="Center" Width="100"/>
                                        <CheckBox Grid.Column="1" Content="&#xE704;" VerticalAlignment="Center" IsChecked="{Binding Data.Streaming}" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18"/>
                                    </Grid>
                                </StackPanel>
                            </TabItem>

                            <!-- ======================================== Image ======================================== -->
                            <TabItem IsSelected="{Binding ImageTabControl}">
                                <TabItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="./Fonts/#Segoe Fluent Icons" Text="&#xF4A9;" Margin="0,3,0,0" FontSize="18"/>
                                        <TextBlock Text="Image" Margin="2,0,0,0" />
                                    </StackPanel>
                                </TabItem.Header>
                                <StackPanel>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Format" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Text="&#xE91B;" VerticalAlignment="Center" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18"/>
                                        <ComboBox Grid.Column="3" ItemsSource="{Binding Data.ImageFormatType}" SelectedIndex="{Binding Data.ImageFormat}"  />
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Name Suffix" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Text="&#xE894;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center" Opacity="0.6"/>
                                        <TextBlock Grid.Column="1" Text="&#xF4A9;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.SaveZeroCount}" Margin="2,0,0,0" PreviewTextInput="DoubleTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <TextBlock Grid.Column="3" Text="{Binding Data.SaveZeroName}" VerticalAlignment="Center" FontSize="11" Margin="2,0,0,0"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="JPG Quality" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Text="&#xE7C5;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Qscale}" Margin="2,0,0,0" PreviewTextInput="DoubleTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <TextBlock Grid.Column="3" Text="1~31(Higher numbers mean lower quality.)" VerticalAlignment="Center" FontSize="11" Margin="2,0,0,0"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition Height="2"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="2"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="2"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Column="0" Text="Resize" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Text="&#xE8AB;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Scale.Width}" Margin="2,0,2,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <TextBlock Grid.Column="3" Text="&#xE8CB;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="4" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Scale.Height}" Margin="2,0,0,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>

                                        <TextBlock Grid.Column="0" Grid.Row="2" Text="Crop Start" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Grid.Row="2" Text="&#xEA5B;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" Grid.Row="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.CropStart.Width}" Margin="2,0,2,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <TextBlock Grid.Column="3" Grid.Row="2" Text="&#xEA5B;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                            <TextBlock.RenderTransform><TransformGroup><ScaleTransform/><SkewTransform/><RotateTransform Angle="90"/><TranslateTransform/></TransformGroup></TextBlock.RenderTransform></TextBlock>
                                        <TextBox Grid.Column="4" Grid.Row="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.CropStart.Height}" Margin="2,0,0,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>

                                        <TextBlock Grid.Column="0" Grid.Row="4" Text="Crop Size" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Grid.Row="4" Text="&#xE8AB;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" Grid.Row="4" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.CropSize.Width}" Margin="2,0,2,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                        <TextBlock Grid.Column="3" Grid.Row="4" Text="&#xE8CB;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="4" Grid.Row="4" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.CropSize.Height}" Margin="2,0,0,0" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="FPS" VerticalAlignment="Center" Width="100"/>
                                        <TextBlock Grid.Column="1" Text="&#xE8B9;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Fps}" Margin="2,0,0,0" PreviewTextInput="DoubleTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Rotation" VerticalAlignment="Center" Width="100"/>
                                        <Slider Minimum="0" Maximum="270" TickFrequency="90" IsSnapToTickEnabled="True" TickPlacement="Both"  Grid.Column="1" Value="{Binding Data.Rotation}"/>
                                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="30" Grid.Column="2" Text="{Binding Data.Rotation}"/>
                                    </Grid>
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Flip" VerticalAlignment="Center" Width="100"/>
                                        <CheckBox Grid.Column="1" Content="&#xE8AB;" VerticalAlignment="Center" IsChecked="{Binding Data.HFlip}" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18"/>
                                        <CheckBox Grid.Column="2" Content="&#xE8CB;" VerticalAlignment="Center" IsChecked="{Binding Data.VFlip}" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18"/>
                                    </Grid>
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                    </StackPanel>
                    <Grid Margin="0,2,2,0" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <TextBlock><Hyperlink NavigateUri="https://gumpcb.tistory.com" Click="HyperLink_Click" Cursor="Hand">gumpcb.tistory.com</Hyperlink>
                        </TextBlock>
                    </Grid>
                </Grid>

                <!-- ======================================== Time ======================================== -->
                <Grid Margin="2,2,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="2"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Text="Start Time" VerticalAlignment="Center" Width="100"/>
                    <CheckBox Grid.Column="1" Content="&#xEA52; " VerticalAlignment="Center" IsChecked="{Binding Data.Start.Checked}" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18"/>
                    <TextBox Grid.Column="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Start.Hour}" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                    <TextBlock Grid.Column="3" Text=" : " VerticalAlignment="Center"/>
                    <TextBox Grid.Column="4" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Start.Minute}" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                    <TextBlock Grid.Column="5" Text=" : " VerticalAlignment="Center"/>
                    <TextBox Grid.Column="6" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Start.Seconds}" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                    <TextBlock Grid.Column="7" Text=" . " VerticalAlignment="Center"/>
                    <TextBox Grid.Column="8" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.Start.Milliseconds}" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>

                    <TextBlock Grid.Column="0" Grid.Row="2" Text="End Time" VerticalAlignment="Center" Width="100"/>
                    <CheckBox Grid.Column="1" Grid.Row="2" Content="&#xE8B5; " VerticalAlignment="Center" IsChecked="{Binding Data.End.Checked}" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" />
                    <TextBox Grid.Column="2" Grid.Row="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.End.Hour}" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                    <TextBlock Grid.Column="3" Grid.Row="2" Text=" : " VerticalAlignment="Center"/>
                    <TextBox Grid.Column="4" Grid.Row="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.End.Minute}" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                    <TextBlock Grid.Column="5" Grid.Row="2" Text=" : " VerticalAlignment="Center"/>
                    <TextBox Grid.Column="6" Grid.Row="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.End.Seconds}" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                    <TextBlock Grid.Column="7" Grid.Row="2" Text=" . " VerticalAlignment="Center"/>
                    <TextBox Grid.Column="8" Grid.Row="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding Data.End.Milliseconds}" PreviewTextInput="IntTextBox_PreviewTextInput" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                </Grid>

                <Grid Margin="2,2,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="2"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="2"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="2"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Open Cmd" VerticalAlignment="Center"/>
                    <CheckBox Grid.Column="2" Content="&#xE737;" VerticalAlignment="Center" IsChecked="{Binding OpenCmd}" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18"/>
                    <Button Grid.Column="4" Content="&#xE756;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" Command="{Binding CmdButton}"/>
                    <Button Grid.Column="6" Content="&#xE954;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" Command="{Binding VideoInfoButton}"/>
                    <Button Grid.Column="8" Content="&#xE75C;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="18" Command="{Binding EraseButton}"/>
                </Grid>
            </StackPanel>

            <Grid Margin="0,2,0,0" Grid.Row="1" Height="6">
                <ProgressBar IsIndeterminate="{Binding Working}"/>
            </Grid>

            <TextBox TextWrapping="Wrap" Text="{Binding ResultText}" Grid.Row="2" VerticalScrollBarVisibility="Auto" FontSize="14" TextChanged="ScrollToEndTextBox_TextChanged"/>
        </Grid>


        <GridSplitter Grid.Column="1" Margin="0,2,0,0" HorizontalAlignment="Center" VerticalAlignment="Stretch" ShowsPreview="True" Width="6" Background="DarkSlateBlue"/>

        <!-- ======================================== Batch ======================================== -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel VerticalAlignment="Top">
                <Grid Margin="2,2,2,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="2"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Button Grid.Column="0" Grid.Row="0" Content="Load File" Command="{Binding BatchOpenFileButton}"/>
                            <Button Grid.Column="0" Grid.Row="2" Content="Load Directory" Command="{Binding BatchOpenDirectoryButton}"/>

                            <Button Grid.Column="2" Grid.Row="0" Content="File Move (Select)" Command="{Binding BatchMoveSelectedButton}"/>
                            <Button Grid.Column="2" Grid.Row="2" Content="File Move (All)" Command="{Binding BatchMoveAllButton}"/>

                            <Button Grid.Column="4" Grid.Row="0" Content="List Remove (Select)" Command="{Binding BatchRemoveSelectedButton}"/>
                            <Button Grid.Column="4" Grid.Row="2" Content="List Remove (All)" Command="{Binding BatchRemoveAllButton}"/>
                        </Grid>
                        <Grid Margin="0,2,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Content=" Save Directory " Command="{Binding BatchSaveDirectoryButton}"/>
                            <TextBox TextWrapping="NoWrap" Grid.Column="2" Text="{Binding BatchSaveDirectory}" FontSize="12" IsReadOnly="True" PreviewDragOver="SaveDirectoryDragOver" PreviewDrop="SaveDirectoryDrop"/>
                        </Grid>
                        <Grid Margin="0,2,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="SaveFileName" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding BatchReplaceNameOld}" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                            <TextBlock Grid.Column="3" Text=" -> " VerticalAlignment="Center"/>
                            <TextBox Grid.Column="4" TextWrapping="NoWrap" TextAlignment="Center" Text="{Binding BatchReplaceNameNew}" GotMouseCapture="SelectAllTextBox_GotMouseCapture" GotKeyboardFocus="SelectAllTextBox_GotKeyboardFocus"/>
                            <Button Grid.Column="6" Content="Replace" Command="{Binding BatchReplaceNameButton}"/>
                        </Grid>
                    </StackPanel>
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="2"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button x:Name="button" Grid.Row="0" Command="{Binding BatchCutSelectedButton}"/>
                        <Button x:Name="button1" Grid.Row="2" Command="{Binding BatchCutAllButton}"/>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False" IsEnabled="{Binding IsEnabled, ElementName=button}" >
                            <TextBlock Text="&#xE786;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="48"/>
                            <TextBlock Text=" (Select)" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False" IsEnabled="{Binding IsEnabled, ElementName=button1}" >
                            <TextBlock Text="&#xE786;" FontFamily="./Fonts/#Segoe Fluent Icons" FontSize="48"/>
                            <TextBlock Text=" (All)" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
                
                <Grid Margin="0,2,0,0" Height="6">
                    <ProgressBar Maximum="{Binding BatchProgressMaximum}" Value="{Binding BatchProgressCurrent}"/>
                </Grid>
            </StackPanel>

            <Grid Grid.Row="1">
                <DataGrid ItemsSource="{Binding VideoList}" CanUserAddRows="False" CanUserDeleteRows="True" AutoGenerateColumns="False" SelectionChanged="VideoList_SelectionChanged" PreviewDragOver="BatchDragOver" PreviewDrop="BatchDrop" AllowDrop="True" FontSize="12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="LoadFile" IsReadOnly="True" Binding="{Binding FileName}"/>
                        <DataGridTextColumn Header="SaveFileName" Binding="{Binding SaveName}"/>
                        <DataGridTextColumn Header="Encoder" IsReadOnly="True" Binding="{Binding Encoder}"/>
                        <DataGridTextColumn Header="Resolution" IsReadOnly="True" Binding="{Binding Resolution}"/>
                        <DataGridTextColumn Header="Duration" IsReadOnly="True" Binding="{Binding Duration}"/>
                        <DataGridTextColumn Header="FPS" IsReadOnly="True" Binding="{Binding FPS}"/>
                        <DataGridTextColumn Header="Bitrate" IsReadOnly="True" Binding="{Binding Bitrate}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>
